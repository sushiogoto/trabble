<div class="trips" ng-controller="TripCtrl as trip">

  <!-- Sidebar -->
  <div id="sidebar-wrapper">
    <div class="sidebar-nav user_profile">
      <%= image_tag current_user.largeimage %><br />
      <%= current_user.name %>
    </div>
    <div class="sidebar-nav trips_list">
      <p>Your Trips</p>
      <div class="row trips btn btn-block btn-default" ng-repeat="trip in trips">
        <a ng-href="/trips/{{ trip.id }}" class="col-md-3">{{ trip.name }} </a>
      </div>
      <%= link_to 'New Trip', new_trip_path %>
    </div>
  </div>
  <!-- /#sidebar-wrapper -->

  <% if current_user.trips.count == 0 %>
    <h1 class="text-center">You have no trip planned yet, let's get tempted:</h1>
    <br/>
    <div class="text-center">
    <%= link_to 'Plan a New Trip with your Friends Now!', new_trip_path, class: "btn btn-lg btn-default" %>
    </div>
  <% else %>
    <h1 class="text-center">Enjoy the trip to come!</h1>
    <br/>
    <div class="text-center">
      <%= link_to 'Wanna plan another trip with your Friends now?', new_trip_path, class: "btn btn-lg btn-default" %>
    </div>
  <% end %>

</div>